# 🌍 Server Configuration
PORT=5000
NODE_ENV=development

# 🛢️ MongoDB Connection
MONGO_DB_URL=mongodb://127.0.0.1:27017/Julia

# 🔐 JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=2h

# 🔑 Optional Refresh Tokens (not used in basic setup)
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_REFRESH_EXPIRATION=7d

# 📧 Email Configuration (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=yourgmail@gmail.com
EMAIL_PASS=your-gmail-app-password  # Use App Password, not login password!
EMAIL_RECEIVER=yourgmail@gmail.com  # Optional: separate receiver email

# 📲 Telegram Webhook Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=@your_channel_or_chat_id  # Or use numeric ID (e.g. 12345678)

# 🌐 Client & CORS Settings
CLIENT_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://your-production-domain.com

# ⚙️ API & Session Behavior
API_URL=http://localhost:5000
AUTO_LOGOUT_TIME=600000  # 10 minutes in milliseconds
SESSION_TIMEOUT=30m
HASH_SALT_ROUNDS=10

# 🧪 Feature Flags
ENABLE_AUTO_SEED=true

# 🔧 Logging
LOG_LEVEL=debug
