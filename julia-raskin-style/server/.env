# 🌍 Server Configuration
PORT=5000
NODE_ENV=development

# 🛢️ Database Connection
MONGO_DB_URL=mongodb://127.0.0.1:27017/Julia

# 🔐 Authentication & Security
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=2h

# 🔑 Refresh Token
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRATION=7d

# 📧 Email Configuration for Gmail
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=juliastyleon@gmail.com
EMAIL_PASS=your-app-password-here  # ⚠️ This must be an App Password from Google, NOT your Gmail login!

# ⚙️ Feature Flags
ENABLE_AUTO_SEED=true
AUTO_LOGOUT_TIME=600000

# 🖥️ CORS Configuration
CLIENT_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://yourproductiondomain.com

# 🌐 API URL
API_URL=http://localhost:5000

# 🔧 Logging & Debugging
LOG_LEVEL=debug

# 🔑 Encryption
HASH_SALT_ROUNDS=10
SESSION_TIMEOUT=30m
